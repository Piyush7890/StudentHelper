<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cview"
   android:stateListAnimator="@animator/raise"
    android:foreground="?android:selectableItemBackground"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<TextView
    android:textStyle="bold"
    tools:text="Hello"
    android:paddingTop="12dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="2dp"
    android:id="@+id/title"
    android:fontFamily="sans-serif-condensed"
    android:textAppearance="@style/TextAppearance.AppCompat.Title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:ellipsize="marquee"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:id="@+id/content"
        android:maxLines="4"/>
    <LinearLayout
        android:layout_below="@id/content"
        android:id="@+id/image_container"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.mamid.studenthelper.Utils.SquareImageView
            android:layout_marginEnd="2dp"
            android:id="@+id/image_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <com.example.mamid.studenthelper.Utils.SquareImageView
            android:layout_marginStart="2dp"
            android:layout_marginEnd="0dp"
            android:id="@+id/image_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_below="@id/image_container"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/time_edited"
        android:paddingEnd="8dp"
        android:paddingStart="16dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"/>
    <ImageView
        android:id="@+id/lock"
        android:visibility="gone"
        android:src="@drawable/ic_lock_blacck_24dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"
        android:layout_marginStart="12dp"
        />

</RelativeLayout></android.support.v7.widget.CardView>